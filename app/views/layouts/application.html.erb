<!DOCTYPE html>
<html>
  <head>
    <title>AudioCloud</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <% if current_user %>
      <script>
        window.currentUser = {
          'id': <%= current_user.id %>,
          'display_name': '<%= current_user.display_name %>'
        }
      </script>
    <% end %>

    <script type="text/javascript">
      window.logoURL = "<%= image_url('greenlogo.png') %>";
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>



